
<div class="container-fluid">
   <div class="row">
      <div class="col img-col">
         <img class="img-size" src="../public/img/foodiesfeed.com_oranges-with-ice (1).jpg" alt="">
      </div> 
      <div class="col form-col">
         <h2>Register</h2> 
         <%- include ('partials/messages') %>
         <a href="/" class="btn-link">
            <button class="btn btn-outline-primary">Home</button>
         </a> 
         <form method="POST"> 
            <input type="text"
            name="name" 
            value="<%= typeof name != 'undefined' ? name : '' %>"
            class="form-control" placeholder="Name" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div class="form-group mt-3">
              <input type="email"
              name="email"
               class="form-control" placeholder="Email" id="exampleInputEmail1" aria-describedby="emailHelp">
              <small id="emailHelp" class="form-text text-muted"></small>
            </div>
          
             <div class="form-group mt-3">
             
              <input
              name="password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
              type="password" class="form-control" placeholder="password" id="exampleInputPassword1">
            </div> 
            <div class="form-group">
               <input
               name="password2"
               value="<%= typeof password != 'undefined' ? password : '' %>"
                type="password" class="form-control" placeholder="retype" id="exampleInputPassword1">
             </div>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
          </form> 
          <a href="/users/login">
            <button type="submit" class="btn btn-outline-success mt-2">Login</button>
          </a>
      </div>
   </div>
</div>
